{
  "version": "0.1.0",
  "command": "npm",
  "isShellCommand": true,
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "Test (file)",
      "args": ["run", "test:file", "${file}"],
      "isTestCommand": true
    },
    {
      "taskName": "Test (all)",
      "args": ["test"]
    },
    {
      "taskName": "Watch",
      "args": ["run", "watch"],
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "taskName": "Publish",
      "args": ["run", "safePublish"]
    }
  ]
}