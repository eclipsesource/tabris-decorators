{
  "version": "2.0.0",
  "presentation": {
    "reveal": "always",
    "focus": false,
    "panel": "dedicated",
    "showReuseMessage": false
  },
  "type": "shell",
  "tasks": [
    {
      "label": "Test (file)",
      "command": "npm",
      "args": ["run", "test:file", "${file}"],
      "type": "shell",
      "group": {
        "isDefault": true,
        "kind": "test"
      }
    },
    {
      "label": "Publish",
      "type": "shell",
      "command": "npm",
      "args": ["run", "safePublish"]
    }
  ]
}