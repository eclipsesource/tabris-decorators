{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Test",
      "type": "node",
      "protocol": "inspector",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-mocha",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-mocha.cmd"
      },
      "runtimeArgs": [
        "--colors",
        "${file}",
        "-p",
        "./tsconfig-test.json",
        "./test/*.spec.ts",
         "./test/*.spec.tsx"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Attach to Port",
      "type": "node",
      "protocol": "inspector",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceRoot}"
    }
  ]
}
