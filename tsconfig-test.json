{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "rootDirs": ["src", "test"],
    "lib": ["es6", "es2015.promise" ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "jsxFactory": "JSX.createElement"
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./test/**/*.tsx"
  ]
}
