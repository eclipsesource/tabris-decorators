    "sinon-chai": "^2.7.0",
    "tabris": "nightly",
    "ts-loader": "^3.5.0",
    "ts-mocha": "^1.0.3",
    "tslint": "^5.3.2",
    "typescript": "^2.6.2",
    "uglifyjs-webpack-plugin": "^1.2.4",
