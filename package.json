    "lint": "tslint --project ./tsconfig-test.json src/*/*.ts test/**/*.ts test/**/*.tsx",
    "safePublish": "npm test && npm run clean && npm run build && npm publish"
  },
  "peerDependencies": {
    "tabris": "^2.4.2"
